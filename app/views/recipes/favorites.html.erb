<div class="container">
  <div class="flex mt-20 justify-self-center bg-blue-300 py-5 px-20 rounded-full ml-20">
    お気に入り
  </div>
    <div class="row">
    <div class="col-12">
    <div class="row">
      <% if @favorite_recipes.present? %>
        <% @favorite_recipes.each do |recipe| %>
          <div class="w-full sm:w-1/2 lg:w-1/3 mb-3 ml-5">
          <div id="recipe-id-<%= recipe.id %>">
          <div class="bg-white rounded shadow">
          <%= image_tag recipe.avatar_url, class: "w-72 h-48 object-cover", alt: "Avatar" %>
          <div class="p-4">
            <div class="flex justify-between items-center">
              <h4 class="text-lg font-bold">
                <%= link_to recipe.title, recipe_path(recipe) %>
              </h4>
            </div>
                <div class="list-none mt-2">
                  <%= recipe.user.name %>
                </div>
                <p><%= "調理時間#{recipe.cooking_time}分" %></p>
              </div>
              <bottom class="bg-blue-500 text-black font-bold py-2 px-4 rounded">
                      <%= link_to "お気に入り", favorite_path(current_user.favorites.find_by(recipe_id: recipe.id)), id: "unfavorite-button-for-recipe-#{recipe.id}", data: { turbo_method: :delete } %>
                    </bottom>
            </div>
          </div>
        </div>
        <% end %>
    <% else %>
    <p class="text-center text-gray-500"><%= "お気に入りがありません" %></p>
    <% end %>
    </div>
    </div>
    </div>
</div>
