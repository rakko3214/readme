<div class="container pt-3">
  <div class="flex justify-self-center mt-4">
    <% if @recipes.present? %>
      <% @recipes.each do |recipe| %>
        <div class="w-full sm:w-1/2 lg:w-1/3 mb-3 ml-5">
          <div id="recipe-id-<%= recipe.id %>">
            <div class="bg-white rounded shadow">
               <%= image_tag recipe.avatar_url, class: "w-72 h-48 object-cover", alt: "Avatar" %>
                <div class="p-4">
                  <div class="flex justify-between items-center">
                     <h4 class="text-lg font-bold">
                      <%= link_to recipe.title, recipe_path(recipe) %>
                    </h4>
                  </div>
                    <div class="list-none mt-2">
                      <%= recipe.user.name %>
                    </div>
                      <p><%= "調理時間#{recipe.cooking_time}分" %></p>
                      <%= render "favorite_buttons", { recipe: recipe } %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="mb-3">レシピがありません</div>
    <% end %>
  </div>
</div>
<div class="text-black bg-purple-500 py-10 px-20 mt-40 justify-self-center">
<%= link_to  new_recipe_path do %>
  <i class="inline-flex md:h-12 md:items-center justify-center rounded-md bg-indigo-800 px-6 text-xs md:text-base font-medium text-neutral-50 shadow-lg shadow-neutral-500/20 transition active:scale-95">レシピ作成→</i>
<% end %>
</div>