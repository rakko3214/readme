<header class="bg-sky-400">
  <nav class="flex justify-between md:p-3 text-base sm:text-lg md:text-xl">
    <div class="flex py-3">
    <%= link_to root_path do %>
      <i class="inline-flex h-12 items-center justify-center rounded-md bg-neutral-950 px-6 font-medium text-neutral-50 shadow-lg shadow-neutral-500/20 transition active:scale-95">TOP</i>
    <% end %>
    </div>
    <div class="flex py-3 text-black">
    <%= search_form_for @search, url: recipes_path, html: {data: {controller: "search",action: "input->search#submit"} } do |f| %>
      <div class="flex items-center mb-3">
        <%= f.search_field :title_or_ingredient_cont, class: "form-input rounded-md border-gray-300 shadow-sm", placeholder: "レシピ名・材料名" %>
      </div>
    <% end %>  
    </div>
    <div class="flex py-3">
      <%= link_to new_user_session_path do %>
        <i class="inline-flex h-12 items-center justify-center rounded-md bg-neutral-950 px-6 font-medium text-neutral-50 shadow-lg shadow-neutral-500/20 transition active:scale-95">ログイン</i>
      <% end %>
    </div>
</header>
