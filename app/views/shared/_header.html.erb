<header class="bg-sky-400">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-3 lg:px-3" aria-label="Global">
    <div class="flex py-3">
      <bottom class="bg-slate-700 text-white font-bold py-2 px-4 rounded">
        <%= link_to 'TOP', root_path, class: "text-4xl nav-link hover:text-blue-500" %>
      </bottom>
    </div>
    <div class="flex py-3 text-black">
    <%= search_form_for @q, url: recipes_path do |f| %>
