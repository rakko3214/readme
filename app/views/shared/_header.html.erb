        <div class="ml-2">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>    
    </div>
    <div class="flex py-3">
      <div class="bg-slate-700 text-white font-bold py-2 px-4 rounded">
        <%= link_to "マイページ", "/users/#{current_user.id}", class: "text-4xl nav-link hover:text-blue-400" %>
      </div>
    </div>
    <div class="bg-slate-700 text-white font-bold py-2 px-4 rounded">
      <%= button_to "ログアウト", destroy_user_session_path, method: :delete %>
    </div>
</header>
